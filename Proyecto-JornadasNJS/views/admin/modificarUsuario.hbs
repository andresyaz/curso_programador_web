<h1>Modificar usuario</h1>
<form action="/admin/usuarios/modificar" method="post">
    <input type="hidden" value="{{usuario.id}}" name="id">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Usuario" name="user" value="{{usuario.user}}">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="ContraseÃ±a" name="password" value="{{usuario.password}}">
    </div>
    <button type="submit" class="btn btn-primary">Modificar</button>
    {{#if error}}
    <h5> {{message}} </h5>
    {{/if}}
</form>