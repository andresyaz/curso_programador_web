
<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mx-4 border-bottom">
      <div class="col-md-3 mb-2 mb-md-0">
        <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
           <span>Vista de Usuarios</span>
             <a href="/admin/main" class="mx-2">Inicio </a> 
        </a>
      </div>
      <div class="col-md-3 text-end">
    <a href="/admin/login/logout" class="btn btn-danger">Cerrar Sesion <i class="fa fa-sign-out-alt"></i></a>
      </div>
    </header>



<div class="container" >
    <div class="row">
        <div class="col">
            <p class="text-end">
            <h5>Listado de usuarios</h5>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarUsuarioModal">
 Nuevo usuario <i class="fa fa-plus"></i>
</button>
            
            </p>
        </div>
    </div>
</div>

<div class="container my-3 w-60">
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{user}}</td>
                        <td>
                            <a href="/admin/usuarios/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></a>
                            <!--a href="/admin/usuarios/modificar/{{id}}" class="btn btn-sm btn-secondary btnmodificar" data-bs-toggle="modal" data-bs-target="#modificarUsuarioModal"><i class="fa fa-pencil"></i></a-->
                            <a href="/admin/usuarios/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>





<!-- Modal Agregar Nuevo -->
<div class="modal fade" id="agregarUsuarioModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Agregar Usuario</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <section class="my-4 m-auto p-3">

          <form action="/admin/usuarios/agregar" method="post">
            <div class="form-group my-2">
              <input type="text" class="form-control" placeholder="Usuario" name="user" required>
            </div>
            <div class="form-group my-2">
              <input type="text" class="form-control" placeholder="Contraseña" name="password" required>
            </div>
              <div class="form-group my-2">
              <input type="number" class="form-control" placeholder="Nivel" name="level">
            </div>
            <button type="submit" class="btn btn-primary my-2">Guardar</button>
            {{#if error}}
            <p> {{message}} </p>
            {{/if}}
          </form>
        </section>


      </div>
     
    </div>
  </div>
</div>


<!-- Modal Modificar Seleccionado -->
<div class="modal fade" id="modificarUsuarioModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Modificar Usuario</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       
 <form action="/admin/usuarios/modificar" method="post">
    <input type="hidden" value="{{usuario.id}}" name="id">
    <div class="form-group my-2">
        <input type="text" class="form-control" placeholder="Usuario" name="user" value="{{usuario.user}}">
    </div>
    <div class="form-group my-2">
        <input type="text" class="form-control" placeholder="Contraseña" name="password" value="{{usuario.password}}">
    </div>
    <button type="submit" class="btn btn-primary my-2">Modificar</button>
    {{#if error}}
    <h5> {{message}} </h5>
    {{/if}}
</form>




      </div>
    </div>
  </div>
</div>